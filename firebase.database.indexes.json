{
  "rules": {
    "courses": {
      ".indexOn": ["teacherId", "code", "section"]
    },
    "sessions": {
      ".indexOn": ["courseId", "teacherId", "startsAt", "endsAt", "isActive"]
    },
    "attendance": {
      "$studentId": {
        ".indexOn": ["sessionId", "markedAt"]
      }
    },
    "attendance_attempts": {
      "$date": {
        ".indexOn": ["studentId", "sessionId", "success", "createdAt"]
      }
    }
  }
}
